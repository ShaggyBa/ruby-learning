= form_for @user, url: users_path, html: { class: "mt-4" } do |f|
  - if @user.errors.any?
    #error_explanation.alert.alert-danger
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .mb-3
    = f.label :email, "Почтовый адрес", class: "form-label"
    = f.email_field :email, class: "form-control", required: true

  .mb-3
    = f.label :password, "Пароль", class: "form-label"
    = f.password_field :password, class: "form-control", required: true

  .mb-3
    = f.label :password_confirmation, "Подтвердите пароль", class: "form-label"
    = f.password_field :password_confirmation, class: "form-control", required: true

  .mb-3
    = f.label :registration_key, "Ключ регистрации (если имеется)", class: "form-label"
    = f.text_field :registration_key, class: "form-control"

  .actions.mt-4.d-flex.justify-content-center
    = f.submit 'Создать аккаунт', class: 'btn btn-success'

%p.mt-3
  %span Уже имеете аккаунт?
  = link_to 'Вход', signin_path, class: 'btn btn-link'

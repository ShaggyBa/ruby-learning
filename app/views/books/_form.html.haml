= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :book_name
    = f.text_field :book_name
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :count
    = f.number_field :count
  .actions
    = f.submit 'Save'
